@model ProjetoBlueModas.Models.Admin

@{
    ViewData["Title"] = "Login";
}

<style>
    @* Imports *@ @@import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300&display=swap');

    #Dashboard, #ProdutoAdmin, #Categoria, #Historico, #Sair {
        display: none;
    }

    .lh-title {
        font-family: 'Quicksand', sans-serif;
        margin: 20px 0px;
    }

    .lh-access {
        margin-top: 20px;
        font-size: 12pt;
    }
</style>

@if (ViewBag.Message != null) {
    <script>
        window.alert(@ViewBag.Message);
    </script>
}

<div class="container">
    <div class="row d-flex align-content-center justify-content-center">
        <div class="lh-title text-center col-lg-12">
            <h2><i class="fal fa-user"></i> Administrador</h2>
        </div>
        <div class="col-lg-4">
            <form asp-action="Verify">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-lg-12">
                    <input asp-for="Email" class="form-control" placeholder="E-mail" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-12">
                    <input asp-for="Senha" type="password" class="form-control" placeholder="Senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="offset-lg-8 col-lg-4">
                    <input type="submit" value="Entrar" class="btn btn-outline-primary" />
                </div>
            </form>
        </div>
        <div class="lh-access text-danger text-center col-lg-12">
            bluemodas@gmail.com | bluemodas123
        </div>
    </div>
</div>