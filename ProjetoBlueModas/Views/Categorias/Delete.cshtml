@model ProjetoBlueModas.Models.Categoria
<style>
    @* Imports *@
    @@import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300&display=swap');

    #Home, #Produto, #Sobre, #Cesta, #Login {
        display: none;
    }

    .lh-title {
        font-family: 'Quicksand', sans-serif;
        margin-bottom: 30px;
    }

    .lh-hr {
        width: 80%;
        margin-bottom: 20px;
    }
</style>

@if (ViewBag.Message != null) {
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

<div class="lh-title text-center">
    <h3>Certeza que deseja Excluir essa Categoria?</h3>
</div>
<hr class="lh-hr" />
<div class="container">
    <div class="row">
        <div class="row col-4 mx-auto">
            <dt class="col-10">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-2">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <form asp-action="Delete">
                <a asp-action="Index"><i class="fal fa-angle-left"></i> Voltar</a> |
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Remover" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>
