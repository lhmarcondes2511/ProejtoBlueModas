@model ProjetoBlueModas.Models.Produto

<style>
    @* Imports *@
    @@import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300&display=swap');

    #Home, #Produto, #Sobre, #Cesta, #Login {
        display: none;
    }

    .lh-title {
        font-family: 'Quicksand', sans-serif;
    }

    .lh-hr {
        width: 80%;
        margin-bottom: 20px;
    }
</style>

<div class="lh-title text-center">
    <h3>Detalhes do Produto</h3>
</div>
<hr class="lh-hr" />
<div class="container">
    <div class="row">
        <div class="row col-4 mx-auto">
            <dt class="col-7">
                @Html.DisplayNameFor(model => model.Codigo)
            </dt>
            <dd class="col-5">
                @Html.DisplayFor(model => model.Codigo)
            </dd>
            <dt class="col-7">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-5">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-7">
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd class="col-5">
                @Html.DisplayFor(model => model.Preco)
            </dd>
            <dt class="col-7">
                Imagem
            </dt>
            <dd class="col-5">
                <img src="@("~/Image/"+Model.Imagem)" asp-append-version="true" width="200px" />
            </dd>
            <div>
                <a asp-action="Index"><i class="fal fa-angle-left"></i> Voltar</a> |
                <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
            </div>
        </div>
    </div>
</div>
