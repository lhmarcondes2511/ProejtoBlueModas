@model IEnumerable<ProjetoBlueModas.Models.Produto>

<style>
    @* Imports *@
    @@import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300&display=swap');

    #Dashboard, #ProdutoAdmin, #Categoria, #Historico, #Sair {
        display: none;
    }

    .lh-cards {
        margin: 30px 0px;
    }

    .lh-card {
        left: 5px;
        display: inline-block;
        vertical-align: top;
        box-shadow: 0px 0px 15px #777;
        margin: 20px 20px;
        height: 300px;
        width: 260px;
        padding: 5px;
        font-family: Verdana, sans-serif;
    }

    .lh-title {
        font-family: 'Quicksand', sans-serif;
        margin-top: 20px;
    }

    .lh-card img {
        width: auto;
        max-height: 50%;
    }

    .lh-categoria, .lh-preco {
        font-size: 10pt;
    }
    
    .lh-preco {
        color: darkgreen;
    }

    .lh-hr {
        width: 80%;
        margin-bottom: 20px;
    }
</style>

<div class="container">
    @*
        Carousel de Produto
    *@

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" height="400px" src="~/img/mulheres_comprando.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" height="400px" src="~/img/escolhendo_roupa.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" height="400px" src="~/img/estante_de_roupas.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    @*
        Cards dos Produtos
    *@
    <div class="lh-title text-center">
        <h3>Produtos Recentes</h3>
    </div>
    <hr class="lh-hr" />
    <div class="lh-cards container">
        @foreach (var item in Model) {
            <div class="lh-card card text-center">
                <img class="card-img-top" src="~/image/@item.Imagem" asp-append-version="true" />
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                    <h6 class="text-left lh-categoria">
                        <b>Categoria: </b> @Html.DisplayFor(modelItem => item.CategoriaId)
                    </h6>
                    <h6 class="lh-preco text-right">@Html.DisplayFor(modelItem => item.Preco)</h6>
                    <div class="text-right">
                        <a href="#" class="btn btn-sm btn-outline-success">+ Adicionar na cesta</a>
                    </div>
                </div>
            </div>
        }
    </div>

    @*
        Fim Cards dos Produtos
    *@
</div>